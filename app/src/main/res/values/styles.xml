<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#D9000000</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="invisible">
        <item name="android:background">#D9000000</item>

    </style>
    <!--Designing the tab layout for movies-->
    <style name="NavigationTabs" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/TabTexts</item>
    </style>
    <style name="TabTexts" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        
    </style>

</resources>
